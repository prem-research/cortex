# Server Configuration
APP_NAME="Cortex Memory API Server"
APP_VERSION="1.0.0"
DEBUG=false
HOST=0.0.0.0
PORT=8080
WORKERS=4

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Keys (comma-separated list of allowed API keys)
API_KEYS=key1,key2,key3

# Database (for API key management)
DATABASE_URL=postgresql+asyncpg://user:password@localhost/cortex_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_PER_MINUTE=100

# Cortex Configuration
OPENAI_API_KEY=your-openai-api-key
CORTEX_MODEL_NAME=text-embedding-3-small
CORTEX_LLM_BACKEND=openai
CORTEX_LLM_MODEL=gpt-4o-mini
CORTEX_STM_CAPACITY=100
CORTEX_ENABLE_SMART_COLLECTIONS=true
CORTEX_ENABLE_BACKGROUND_PROCESSING=true

# ChromaDB Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8003
CHROMA_URI=http://localhost:8003

# gRPC Configuration
GRPC_SERVER_PORT=50051
GRPC_MAX_WORKERS=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json